<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="8dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity2">

        <ImageView
            android:id="@+id/ratePost_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_margin="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <TextView
            android:id="@+id/ratePost_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@color/burnt"
            android:padding="2dp"
            app:layout_constraintLeft_toRightOf="@+id/ratePost_thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/ratePost_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="1dp"
            android:text="author"
            android:textStyle="italic"
            app:layout_constraintLeft_toRightOf="@+id/ratePost_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/ratePost_title"
            />

        <RatingBar
            android:id="@+id/ratePost_ratingBar"
            style="@android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:isIndicator="false"
            android:numStars="5"
            android:progressTint="@color/burnt"
            android:rating="3.5"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:secondaryProgressTint="@color/burnt"
            app:layout_constraintTop_toBottomOf="@+id/ratePost_author"
            app:layout_constraintLeft_toRightOf="@+id/ratePost_thumbnail"
            />

        <ImageView
            android:id="@+id/ratePost_rowFav"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_favorite_border_black_24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/rate_Button"
            android:layout_marginRight="40dp"
            />

        <Button
            android:id="@+id/rate_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
